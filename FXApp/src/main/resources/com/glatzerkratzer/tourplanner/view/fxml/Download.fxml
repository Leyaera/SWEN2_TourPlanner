<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>
<?import java.net.URL?>
<TextFlow xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.glatzerkratzer.tourplanner.view.DownloadController"> <!--prefHeight="400.0" prefWidth="600.0"-->


    <VBox fx:id="downloadArea">
        <Text text="%DownloadPath"/>

        <HBox>
            <TextField fx:id="searchPath"></TextField>
            <Button fx:id="changeDirButton" onAction="#onSearchPathButton"/>
        </HBox>

        <HBox fx:id="safeCancelButtons">
            <Button fx:id="safeButton" text="%Safe" onAction="#onSafeButton"/>
            <Button fx:id="cancelButton" text="%Cancel" onAction="#onCancelButton"/>
        </HBox>
    </VBox>

    <stylesheets>
        <URL value="@../css/download.css" />
    </stylesheets>



</TextFlow>







